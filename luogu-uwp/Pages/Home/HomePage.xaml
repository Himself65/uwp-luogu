<Page
    x:Class="Luogu.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Luogu"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="360"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="520"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <FlipView Grid.Row="0" Grid.Column="0">
            <Image Source="ms-appx:///Assets/Img/header01.img"/>
        </FlipView>
        <CalendarView Grid.Row="1" Grid.Column="0" Height="360" Width="360" SelectionMode="Single" HorizontalAlignment="Center"/>
    </Grid>
</Page>
